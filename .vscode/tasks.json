{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Empresa",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-pedantic",
                "-std=c++11",
                "-I./include",
                "-o",
                "./bin/Empresa.exe",
                "./src/fucionario.cpp",
                "./src/empresa.cpp",
                "./src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}